<?xml version="1.0" encoding="utf-8"?>
<com.example.maxcion_home.jdmall.ui.NumberInputView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/decrease_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:src="@drawable/decrease_count"  />

    <EditText
        android:id="@+id/number_et"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="-2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/number_input_et_bg"
        android:text="1" />

    <ImageView
        android:id="@+id/increase_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-1dp"
        android:src="@drawable/increase_count"  />

</com.example.maxcion_home.jdmall.ui.NumberInputView>
